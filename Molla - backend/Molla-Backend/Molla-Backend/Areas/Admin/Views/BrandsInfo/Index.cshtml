@model List<BrandsInfoVM>

<style>
    .status-slider {
        width: 25px;
        height: 25px;
        border-radius: 50%;
        cursor: pointer;
    }

    .status-true {
        background-color: greenyellow;
    }

    .status-false {
        background-color: red;
    }
</style>

<div class="container">
    <div class="row">
        <table class="table align-middle mb-0 bg-white">
            <thead class="bg-light">
                <tr>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Status</th>
                    <th>Create Date</th>
                    <th>Options</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var eachBrands in Model)
                    {
                        <tr>
                            <td>@eachBrands.Title</td>
                            <td>@eachBrands.Description</td>
                            <td>
                                <div class="status-slider @(eachBrands.Status ? "status-true":"status-false")"></div>
                            </td>
                            <td>@eachBrands.CreateDate</td>
                            <td>
                                <a asp-action="Detail" asp-route-id="@eachBrands.Id" class="btn btn-primary btn-rounded btn-fw">Detail</a>
                                <a href="#" class="btn btn-warning btn-rounded btn-fw">Edit</a>
                                <a asp-action="Delete" asp-route-id="@eachBrands.Id" class="btn btn-danger btn-rounded btn-fw">Delete</a>
                            </td>
                        </tr>
                    }
            </tbody>
        </table>
    </div>
</div>