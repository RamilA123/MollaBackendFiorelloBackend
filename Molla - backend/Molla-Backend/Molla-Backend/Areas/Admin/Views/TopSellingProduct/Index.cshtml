@model List<TopSellingProductVM>

<style>
    .status-slider {
        width: 25px;
        height: 25px;
        border-radius: 50%;
        cursor: pointer;
    }

    .status-true {
        background-color: greenyellow;
    }

    .status-false {
        background-color: red;
    }
</style>

<div class="container">
    <div class="row">
        <table class="table align-middle mb-0 bg-white">
            <thead class="bg-light">
                <tr>
                    <th>Image</th>
                    <th>Name</th>
                    <th>Price</th>
                    <th>Rating</th>
                    <th>SalesCount</th>
                    <th>Status</th>
                    <th>Create Date</th>
                    <th>Options</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var eachProduct in Model)
                {
                    <tr>
                        <td>
                            <div class="d-flex align-items-center">
                                <img src="~/assets/imgs/Home/@eachProduct.Image"
                                     alt=""
                                     style="width: 60px; height: 60px"
                                     class="rounded-circle" />
                            </div>
                        </td>
                        <td>@eachProduct.Name</td>
                        <td>@eachProduct.Price</td>
                        <td>@eachProduct.Rating</td>
                        <td>@eachProduct.SalesCount</td>
                        <td>
                            <div class="status-slider @(eachProduct.Status? "status-true":"status-false")"></div>
                        </td>
                        <td>@eachProduct.CreateDate</td>
                        <td>
                            <a asp-action="Detail" asp-route-id="@eachProduct.Id" class="btn btn-primary btn-rounded btn-fw">Detail</a>
                            <a href="#" class="btn btn-warning btn-rounded btn-fw">Edit</a>
                            <a asp-action="Delete" asp-route-id="@eachProduct.Id" class="btn btn-danger btn-rounded btn-fw">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>