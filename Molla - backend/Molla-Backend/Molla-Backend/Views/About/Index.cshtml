@model AboutVM
@{ 
    ViewData["Title"] = "About Page";
}

@section CSS{
    <link rel="stylesheet" href="~/assets/scss/About/about.css">
}

<section id="links">
    <div class="container">
        <div class="all-links">
            <a href="./home.html">Home</a>
            <i class="fa-solid fa-chevron-right"></i>
            <a href="">Pages</a>
            <i class="fa-solid fa-chevron-right"></i>
            <span>About Us</span>
        </div>
    </div>
</section>

<section id="aboutImg">
    <div class="container">
        <div class="photo-part">
            <div class="text-part">
                <h1>About us</h1>
                <p>Who we are</p>
            </div>
        </div>
    </div>
</section>

<section id="little-infos">
    <div class="all">
        <div class="container">
            <div class="row">
                <div class="col-sm-12 col-md-12 col-lg-6">
                    <div class="our-activities">
                        <h3>Our Vision</h3>
                        <span>
                            Lorem ipsum dolor sit amet, consectetuer adipiscing elit. Phasellus hendrerit.
                            Pellentesque aliquet nibh nec urna. In nisi neque, aliquet vel, dapibus id, mattis
                            vel, nisi. Sed pretium, ligula sollicitudin laoreet viverra, tortor libero sodales
                            leo, eget blandit nunc tortor eu nibh.
                        </span>
                    </div>
                </div>

                <div class="col-sm-12 col-md-12 col-lg-6">
                    <div class="our-activities">
                        <h3>Our Mission</h3>
                        <span>
                            Sed egestas, ante et vulputate volutpat, eros pede semper est, vitae luctus metus
                            libero eu augue. Morbi purus libero, faucibus adipiscing, commodo quis, gravida id,
                            est. Sed lectus. <br> Praesent elementum hendrerit tortor. Sed semper lorem at
                            felis.
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section id="who-we-are">
    <div class="all">
        <div class="container">
            <div class="row">
                <div class="col-sm-12 col-md-12 col-lg-6">
                    <div class="text">
                        <h3>@Model.WhoWeAre.Title</h3>
                        <p class="mb-3">
                            @Model.WhoWeAre.Info
                        </p>
                        <span>
                            @Model.WhoWeAre.MainDescription
                        </span>
                        <button>View Our News<i class="fa-solid fa-arrow-right-long"></i></button>
                    </div>
                </div>
                <div class="col-sm-12 col-md-12 col-lg-6">
                    <div class="images">
                        <img class="img1" src="~/assets/imgs/About/@Model.WhoWeAreImage.FirstOrDefault().Image" alt="">
                        <img class="img2" src="~/assets/imgs/About/@Model.WhoWeAreImage.LastOrDefault().Image" alt="">
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section id="our-brands">
    <div class="all">
        <div class="container">
            <div class="whole">
                <div class="row">
                    <div class="col-sm-12 col-md-12 col-lg-6">
                        <div class="text">
                            <h3>@Model.BrandsInfo.Title</h3>
                            <span>
                                @Model.BrandsInfo.Description
                            </span>
                        </div>
                    </div>
                    <div class="col-sm-12 col-md-12 col-lg-6">
                        <div class="brands">
                            <div class="row">
                                @foreach (var eachImage in Model.BrandsImages)
                                    {
                                        <div class="col-4">
                                            <img src="~/assets/imgs/Home/@eachImage.Image" alt="">
                                        </div>
                                    }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section id="team-members">
    <div class="all">
        <div class="container">
            <div class="caption">
                <h3>Meet Our Team</h3>
            </div>
            <div class="members">
                <div class="row allmembers owl-carousel owl-theme">
                    @foreach (var eachMember in Model.TeamMembers)
                        {
                            <div class="col-12">
                                <div class="each-member people">
                                    <img src="~/assets/imgs/About/@eachMember.Images.FirstOrDefault().Image" alt="">
                                    <h5>@eachMember.FullName</h5>
                                    <span>@eachMember.Position</span>
                                    <div class="hover-info d-none">
                                        <h5>@eachMember.FullName</h5>
                                        <span>@eachMember.Position</span>
                                        <p>@eachMember.Info</p>
                                        <div class="icons">
                                            <i class="fa-brands fa-facebook-f"></i>
                                            <i class="fa-brands fa-twitter"></i>
                                            <i class="fa-brands fa-instagram"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                </div>
            </div>
        </div>
    </div>
</section>

<section id="people-infos">
    <div class="all">
        <div class="container">
            <div class="caption">
                <h3>What Customer Say About Us</h3>
            </div>
            <div class="members">
                <div class="row owl-carousel owl-theme allinfos">
                    @foreach (var eachComment in Model.CustomersComments)
                        {
                            <div class="col-12">
                                <div class="each-member">
                                    <img src="~/assets/imgs/About/@eachComment.Image" alt="">
                                    <p>
                                        @Html.Raw(eachComment.Description)
                                    </p>
                                    <h5>@eachComment.FullName</h5>
                                    <span>@eachComment.Position</span>
                                </div>
                            </div>
                        }
                </div>
            </div>
        </div>
    </div>
</section>

<section id="scrollBtn">
    <div class="btn">
        <i class="fa-solid fa-arrow-up-long"></i>
    </div>
</section>

@section Scripts{
    <script src="~/assets/js/about.js"></script>
}